<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SisAlmacénVeterinaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SisAlmacenProductos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body.color-blind-mode {
            background-color: #f5f5f5 !important;
            color: #000000 !important;
        }

        .color-blind-mode .navbar,
        .color-blind-mode .footer,
        .color-blind-mode .card {
            background-color: #ffffff !important;
            color: #000000 !important;
            border-color: #999 !important;
        }

        /* Botones principales (btn-primary) */
        .color-blind-mode .btn-primary {
            background-color: #0072b2 !important; /* azul accesible */
            border-color: #005f8c !important;
            color: #fff !important;
        }

        /* Botones outline (btn-outline-*) para que se vean neutros */
        .color-blind-mode .btn-outline-primary,
        .color-blind-mode .btn-outline-warning,
        .color-blind-mode .btn-outline-success {
            background-color: transparent !important;
            border: 1px dashed #000000 !important;
            color: #000000 !important;
        }

            /* Hover para botones outline */
            .color-blind-mode .btn-outline-primary:hover,
            .color-blind-mode .btn-outline-warning:hover,
            .color-blind-mode .btn-outline-success:hover {
                background-color: #cccccc !important;
                color: #000000 !important;
            }

        /* Textos de colores (primary, warning, success) a negro */
        .color-blind-mode .text-primary,
        .color-blind-mode .text-warning,
        .color-blind-mode .text-success {
            color: #000000 !important;
        }

        /* Alertas */
        .color-blind-mode .alert-danger {
            background-color: #f0ad4e !important; /* ámbar en vez de rojo */
            border-color: #eea236 !important;
            color: #000000 !important;
        }

        .color-blind-mode .alert-success {
            background-color: #f0ad4e !important; /* usa ámbar neutro para éxito */
            border-color: #eea236 !important;
            color: #000000 !important;
        }

        /* Inputs y grupos */
        .color-blind-mode .form-control,
        .color-blind-mode .input-group-text {
            background-color: #e9ecef !important;
            border-color: #aaa !important;
            color: #000 !important;
        }

        /* Bordes de inputs inválidos */
        .color-blind-mode .is-invalid {
            border: 2px dashed #000 !important;
        }

        /* NAVBAR */

        /* Cambiar color de texto en enlaces y marca con text-dark */
        .color-blind-mode .nav-link.text-dark,
        .color-blind-mode .navbar-brand.text-dark {
            color: #000000 !important;
        }

        /* Fondo y borde del navbar */
        .color-blind-mode .navbar.navbar-light.bg-white {
            background-color: #ffffff !important;
            border-color: #999 !important;
        }

        /* FOOTER */

        /* Cambiar color y fondo del footer */
        .color-blind-mode footer.footer.text-muted {
            background-color: #ffffff !important;
            color: #000000 !important;
            border-color: #999 !important;
        }

            /* Enlaces del footer */
            .color-blind-mode footer.footer.text-muted a {
                color: #000000 !important;
                text-decoration: underline !important;
            }
    </style>


</head>
<body onload="if(localStorage.getItem('colorBlind') === 'on') document.body.classList.add('color-blind-mode')">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index">SisAlmacénVeterinaria</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @*<ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>*@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SisAlmacénVeterinaria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        if(localStorage.getItem('colorBlind') === 'on') {
          document.body.classList.add('color-blind-mode');
        }
    </script>
</body>
</html>