@model List<SisAlmacenProductos.Models.Orden>

<h2>Solicitudes de Clientes</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="ExportarExcelOrdenes" method="post">
    <button type="submit" class="btn btn-outline-success mb-3">
        <i class="bi bi-file-earmark-excel"></i> Exportar a Excel
    </button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Estado</th>
            <th>Modificado Por</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orden in Model)
        {
            <tr>
                <td>@orden.Id</td>
                <td>@orden.Usuario.Username</td>
                <td>@orden.Producto.Nombre</td>
                <td>@orden.Cantidad</td>
                <td>@orden.Estado</td>
                <td>@(orden.ModificadoPor ?? "Sin modificar")</td>
                <td>@orden.FechaSolicitud.ToString("g")</td>
                <td>
                    @if (orden.Estado == "Pendiente")
                    {
                        <form asp-action="CambiarEstado" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@orden.Id" />
                            <input type="hidden" name="nuevoEstado" value="Confirmado" />
                            <button type="submit" class="btn btn-sm btn-success">Confirmar</button>
                        </form>
                        <form asp-action="CambiarEstado" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@orden.Id" />
                            <input type="hidden" name="nuevoEstado" value="Rechazado" />
                            <button type="submit" class="btn btn-sm btn-danger">Rechazar</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">Sin acción</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Admin" asp-action="DashboardAdmin" class="btn btn-secondary mt-3">
    <i class="bi bi-arrow-left-circle"></i> Volver al Panel
</a>
