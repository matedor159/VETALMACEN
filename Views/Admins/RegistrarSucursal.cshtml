@model SisAlmacenProductos.Models.ViewModels.RegistrarSucursalVM

@{
    ViewBag.Title = "Registrar Sucursal";
}

<h2>Registrar Sucursal</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="RegistrarSucursal" method="post" novalidate>
    <div class="form-group mb-3">
        <label for="Username">Nombre de Usuario</label>
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Ingrese nombre de usuario" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="Password">Contraseña</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingrese contraseña" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <hr />

    <div class="form-group mb-3">
        <label for="NombreSucursal">Nombre de la Sucursal</label>
        @Html.TextBoxFor(m => m.NombreSucursal, new { @class = "form-control", placeholder = "Nombre de la sucursal" })
        @Html.ValidationMessageFor(m => m.NombreSucursal, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="Direccion">Dirección</label>
        @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control", placeholder = "Dirección" })
        @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        <label for="Telefono">Teléfono</label>
        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", placeholder = "Teléfono", inputmode = "numeric" })
        @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success mt-3">Registrar Sucursal</button>
    <a asp-action="Usuarios" class="btn btn-secondary mt-3 ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

