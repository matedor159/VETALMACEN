@model SisAlmacenProductos.Models.Producto

@{
    ViewBag.Title = "Editar Producto";
}

<h2>Editar Producto</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Codigo">Código</label>
        @Html.TextBoxFor(model => model.Codigo, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Nombre">Nombre</label>
         @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Descripcion">Descripción</label>
        @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = 3 })
        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Marca">Marca</label>
        @Html.TextBoxFor(model => model.Marca, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Categoria">Categoría</label>
        @Html.TextBoxFor(model => model.Categoria, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Precio">Precio</label>
        @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", type = "number", step = "0.01" })
        @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Stock">Stock</label>
        @Html.TextBoxFor(model => model.Stock, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="ImagenUrl">Imagen URL</label>
        @Html.TextBoxFor(model => model.ImagenUrl, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ImagenUrl, "", new { @class = "text-danger" })
    </div>

    @Html.HiddenFor(model => model.Id)

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="@Url.Action("Productos", "Admin")" class="btn btn-secondary">Cancelar</a>
</form>
