@model SisAlmacenProductos.Models.User

@{
    ViewBag.Title = "Registrar Nuevo Usuario";
}

<h2>Registrar Nuevo Usuario</h2>

<!-- Mostrar los resultados de las pruebas solo si hay algo en ViewBag.ResultadosPruebas -->
@if (ViewBag.ResultadosPruebas != null)
{
    <div class="alert alert-info">
        <strong>Resultados de pruebas:</strong> @ViewBag.ResultadosPruebas
    </div>
}


<form asp-action="AgregarUsuario" method="post">
    <div class="form-group">
        <label for="Username">Nombre de Usuario</label>
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Password">Contraseña</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="RolId" class="form-label">Rol</label>
        <select asp-for="RolId" class="form-control">
            <option value="">-- Selecciona un rol --</option>
            <option value="1">Administrador</option>
            <option value="2">Almacenero</option>
            <option value="3">Cliente</option>
            <option value="4">Logística</option>
        </select>
        <span asp-validation-for="RolId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Registrar</button>
    <a asp-action="RegistrarUsuario" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
