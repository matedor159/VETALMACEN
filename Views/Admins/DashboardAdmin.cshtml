@{
    ViewBag.Title = "Panel de navegación";
    string role = ViewBag.Role as string;
}

<h2>Bienvenido al Panel</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="alert alert-success mb-0">Panel de <strong>@role</strong></div>
    <form asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
        </button>
    </form>
</div>

<div class="row">
    @* Gestión de Productos: todos menos Logística *@
    @if (role != "Logistica")
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam display-4 text-primary"></i>
                    <h5 class="card-title mt-2">Gestión de Productos</h5>
                    <p class="card-text">Ver, agregar o editar productos en el sistema.</p>
                    <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Productos">Ir a Productos</a>
                </div>
            </div>
        </div>
    }

    @* Solicitudes de Clientes: todos menos Almacenero *@
    @if (role != "Almacenero")
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <i class="bi bi-clipboard-check display-4 text-warning"></i>
                    <h5 class="card-title mt-2">Solicitudes de Clientes</h5>
                    <p class="card-text">Aprobar o rechazar solicitudes de productos.</p>
                    <a class="btn btn-outline-warning" asp-controller="Admin" asp-action="Solicitudes">Ver Solicitudes</a>
                </div>
            </div>
        </div>
    }

    @* Registro de Usuarios: solo Administrador *@
    @if (role == "Administrador")
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow">
                <div class="card-body text-center">
                    <i class="bi bi-person-plus-fill display-4 text-success"></i>
                    <h5 class="card-title mt-2">Registro de Usuarios</h5>
                    <p class="card-text">Registrar vendedores o clientes en el sistema.</p>
                    <a class="btn btn-outline-success" asp-controller="Admin" asp-action="RegistrarUsuario">Registrar Usuario</a>
                </div>
            </div>
        </div>
    }
</div>
