@model List<SisAlmacenProductos.Models.Orden>

@{
    ViewBag.Title = "Mis Órdenes";
}

<h2 class="mb-4">Mis Órdenes</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">No tienes órdenes registradas.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Estado</th>
                <th>Fecha de Solicitud</th>
                <th>Hora de Solicitud</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orden in Model)
            {
                <tr>
                    <td>@orden.Producto.Nombre</td>
                    <td>@orden.Cantidad</td>
                    <td>@orden.Estado</td>
                    <td>@orden.FechaSolicitud.ToString("dd/MM/yyyy")</td>
                    <td>@orden.FechaSolicitud.ToString("HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="VistaCliente" asp-controller="Admin" class="btn btn-secondary mt-3">
    <i class="bi bi-arrow-left-circle"></i> Volver al Catálogo
</a>
