@model IEnumerable<SisAlmacenProductos.Models.OrdenEntrada>

@{
    ViewData["Title"] = "Historial de Ingresos";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Historial de Ingresos</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Ingresos</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Listado de Órdenes de Entrada
            <a asp-action="Create" class="btn btn-primary btn-sm float-end">
                <i class="fas fa-plus"></i> Nueva Entrada
            </a>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Cód. Producto</th>
                        <th>Fecha</th>
                        <th>Proveedor</th>
                        <th>Registrado Por</th>
                        <th>Total</th>
                        <th>Cantidad Total</th>
                        <th>Estado</th>
                        <th>Observación</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @foreach(var detalle in item.Detalles)
                                {
                                    <span class="badge bg-secondary me-1">@detalle.Producto.Codigo</span>
                                }
                            </td>
                            <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.Proveedor.RazonSocial</td>
                            <td>@item.Usuario.Username</td>
                            <td>@item.Total.ToString("C")</td>
                            <td>@item.Detalles.Sum(d => d.Cantidad)</td>
                            <td>
                                <span class="badge bg-@(item.Estado == "Recibido" ? "success" : "warning")">
                                    @item.Estado
                                </span>
                            </td>
                            <td>@item.Observacion</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
