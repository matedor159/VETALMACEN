@page
@model SisAlmacenProductos.Views.Account.LoginModel
@{
    ViewBag.Title = "Iniciar Sesión";
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <div class="d-flex justify-content-end">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="colorBlindToggle">
                    <label class="form-check-label" for="colorBlindToggle">♿ Modo Daltonismo</label>
                </div>
            </div>

            <h4 class="card-title text-center mb-4">
                <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
            </h4>

            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="mb-3">
                    <label for="username" class="form-label">
                        <i class="bi bi-person-fill me-1"></i>Usuario
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                        <input type="text" class="form-control" id="username" name="username"
                               placeholder="Ingrese su usuario" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">
                        <i class="bi bi-lock-fill me-1"></i>Contraseña
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                        <input type="password" class="form-control" id="password" name="password"
                               placeholder="Ingrese su contraseña" required>
                    </div>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>@ViewBag.Error</div>
                    </div>
                }

                <div class="mb-3 d-flex justify-content-center">
                    <div class="g-recaptcha" data-sitekey="6LcnLlorAAAAAFA7kBf6yBZxadmD1937DdvwFRnZ"></div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Ingresar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body.color-blind-mode {
        background-color: #f5f5f5;
        color: #000000;
    }

    .color-blind-mode .card {
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #999;
    }

    .color-blind-mode .btn-primary {
        background-color: #0072b2;
        border-color: #005f8c;
    }

    .color-blind-mode .alert-danger {
        background-color: #f0ad4e;
        border-color: #eea236;
        color: #000000;
    }

    .color-blind-mode .form-control,
    .color-blind-mode .input-group-text {
        background-color: #e9ecef;
        color: #000;
        border-color: #aaa;
    }

    .color-blind-mode .form-check-label {
        color: #000000;
    }

    .color-blind-mode .is-invalid {
        border: 2px dashed #000;
    }
</style>

<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleCB = document.getElementById('colorBlindToggle');

        if (localStorage.getItem('colorBlind') === 'on') {
            document.body.classList.add('color-blind-mode');
            toggleCB.checked = true;
        }

        toggleCB.addEventListener('change', function () {
            if (this.checked) {
                document.body.classList.add('color-blind-mode');
                localStorage.setItem('colorBlind', 'on');
            } else {
                document.body.classList.remove('color-blind-mode');
                localStorage.setItem('colorBlind', 'off');
            }
        });
    });
</script>
